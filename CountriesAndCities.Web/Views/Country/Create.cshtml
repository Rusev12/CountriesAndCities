@using CountriesAndCities.Web.Models

@model CountryBindingModel
@{
    /**/

    ViewBag.Title = "Create";
}

<h2>Create Country</h2>
<p class="text-danger">@ViewData["Error"]</p>
@using (Html.BeginForm("Create", "Country", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.LongName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LongName, new { @class = "form-control", @placeholder = "Enter name" })
            @Html.ValidationMessageFor(m => m.LongName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ShortName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control", @placeholder = "Enter abbreviation" })
            @Html.ValidationMessageFor(m => m.ShortName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CallingCode, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.CallingCode, new { @class = "form-control", @placeholder = "Enter abbreviation" })
            @Html.ValidationMessageFor(m => m.CallingCode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FlagUrl, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FlagUrl, new { @class = "form-control", @placeholder = "Enter url" })
            @Html.ValidationMessageFor(m => m.FlagUrl, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
}

